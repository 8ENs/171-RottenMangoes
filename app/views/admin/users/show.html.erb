<h1>Admin (user details)</h1>
<hr>
<h4>
  <%= @user.full_name %> | 
  <%= @user.email %> |
  <% if @user.admin? %>
    (admin) |
  <% end %>
  <%= link_to "edit", edit_admin_user_path(@user) %>
  <% if @user != current_user %>
    , <%= link_to "delete", admin_user_path(@user), method: :delete, confirm: "You sure?" %>
  <% end %>
</h4>
<h6>
  Created: <%= @user.created_at %> | 
  Updated: <%= @user.created_at %>
</h6>

<%= render 'admin/users/footer' %>